
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlanMyTripProject</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/css/Bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"/>
      <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="~/PlanMyTripProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
   
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlanMyTripProject</a>
        </li>
        <li class="nav-item">
           <a class="nav-link " asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
        </li>
                    @if (User.IsInRole("Admin")){
                        
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="Category" asp-action="Category">Category</a>
                            </li>

                           @*  <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="Category" asp-action="CreateRoles">Create User</a>
                                </li>*@
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="Hotel" asp-action="Hotels">Hotel</a>
                            </li>
                         }
                              <li class="nav-item">
                                <a class="nav-link " asp-area="Customer" asp-controller="Cart" asp-action="Index"><i class="bi bi-cart"></i></a>
                            </li>
                              <li class="nav-item dropdown">
                              <a class="nav-link disable dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">More options</a>
                              <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">Packages</a>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Index">Hotels List</a>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="Cart" asp-action="Index">Cart Items</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Customer" asp-controller="History" asp-action="Index">History</a>
                              </div>
                            </li>
      </ul>
      
      <partial name="_LoginPartial"/>
   <form method="get"  asp-asp-controller="Home" asp-action="Search" class="d-flex">
        <input class="form-control me-sm-2" type="text" name="locSearch" value="@ViewData["location"]" placeholder="Search Hotel by Location"/>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
      
    </div>
  </div>
</nav>




    </header>
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification"/>   <!-- To call partial page under shared folder which cotain messages-->
            @RenderBody()
        </main>
    </div>
    <br /><br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PlanMyTripProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
      <script src="https://cdn.tiny.cloud/1/y4z1dgraogt0z4c5pcuz3wluf12kzb4622u6n5lkgydl1aus/tinymce/6/plugins.min.js" referrerpolicy="origin"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
